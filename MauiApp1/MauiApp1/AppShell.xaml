<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:MauiApp1"
       x:Class="MauiApp1.AppShell">

    <FlyoutItem Title="Ana Sayfa" Icon="home_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:Anasayfa}" Route="Anasayfa"/>
    </FlyoutItem>

    <FlyoutItem Title="Kredi Hesaplama" Icon="credit_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:KrediHesaplama}" Route="KrediHesaplama"/>
    </FlyoutItem>

    <FlyoutItem Title="Vücut Kitle İndeksi" Icon="bmi_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:VucudKitle}" Route="VucutKitleIndeksi"/>
    </FlyoutItem>

    <FlyoutItem Title="Renk Seçici" Icon="color_picker_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:RenkSecici}" Route="RenkSecici"/>
    </FlyoutItem>

    <FlyoutItem Title="Yapılacaklar Listesi" Icon="todo_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:YapılcaklarListesi}" Route="YapilacaklarListesi"/>
    </FlyoutItem>

</Shell>
